{
  "name": "offerhelper-desktop",
  "productName": "OfferHelper",
  "version": "1.0.0",
  "description": "程序员面试AI辅助助手桌面端应用",
  "main": "dist/main.js",
  "homepage": "https://offerhelper.com",
  "author": {
    "name": "OfferHelper Team",
    "email": "support@offerhelper.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config config/webpack.main.config.js --mode development --watch",
    "dev:preload": "webpack --config config/webpack.preload.config.js --mode development --watch",
    "dev:renderer": "vite --config config/vite.renderer.config.ts",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config config/webpack.main.config.js --mode production",
    "build:preload": "webpack --config config/webpack.preload.config.js --mode production",
    "build:renderer": "vite build --config config/vite.renderer.config.ts",
    "start": "electron dist/main.js",
    "app": "node scripts/start.js",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "antd": "^5.26.7",
    "bufferutil": "^4.0.9",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.535.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "utf-8-validate": "^6.0.5",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.offerhelper.desktop",
    "productName": "OfferHelper",
    "copyright": "Copyright © 2024 OfferHelper Team",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
